generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id String @id @default(uuid())
  eventCreator String @map("event_creator")
  date DateTime
  hour DateTime
  name String
  hosts String
  modality String
  location String?
  plattform String?
  slug String @unique
  eventCreatorId String @map("event_creator_id")

  employee Employee @relation(fields: [eventCreatorId], references: [id], onDelete: Cascade)

  @@map("events")
}

model Employee {
  id String @id @default(uuid())
  name String
  email String
  password String
  createdAt DateTime @default(now()) @map("created_at")

  event Event[]

  @@unique([email])
  @@map("employees")
}

model AdminLogin {
  id String @id @default(uuid())
  adminUser String @map("admin_user")
  adminPassword String @map("admin_password")
}

model UserLogin {
  id String @id @default(uuid())
  userEmail String @map("user_email")
  userPassword String @map("user_password")
}
